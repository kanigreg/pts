#!/bin/bash

cat /etc/pacman.d/mirrorlist
echo '---'
echo "Enter additional url or empty: "
read -r url
if [[ -n $url ]]; then
  echo "Server = $url" >>/etc/pacman.d/mirrorlist
fi

pacman -Syy
pacman -Syw $(pacman -Slq omarchy)
repo-add /var/cache/pacman/pkg/omarchy.db.tar.zst /var/cache/pacman/pkg/*.pkg.tar.zst
